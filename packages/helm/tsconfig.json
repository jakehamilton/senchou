{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"declaration": true
	},
	"include": ["./src/**/*"],
	"exclude": ["./src/**/__tests__"]
}
